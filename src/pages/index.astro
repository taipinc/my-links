      .link-item.big-box .material-symbols-outlined {
        font-size: 80px;
        font-variation-settings: 'opsz' 48;
      }

      .link-item.icon-box .material-symbols-outlined {
        font-size: 40px;
        font-variation-settings: 'opsz' 40;
      }

      /* Text alignment for row layouts */
      .link-item.row .link-title,
      .link-item.wide-box .link-title,
      .link-item.tiny-box .link-title {
        text-align: left;
        font-size: 14px;
      }

