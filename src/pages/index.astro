      .link-item.text {
        align-items: flex-start;
        justify-content: flex-start;
        text-align: left;
        padding: 20px;
      }

      .content-title {
        font-size: 14px;
        font-weight: 450;
        color: #666;
        margin-bottom: 12px;
        display: block;
      }

