        display: flex;
        gap: 6px;
        align-items: center;
        flex-shrink: 0;
      }

      .icon-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 5px;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 6px;
        background: white;
        color: #1a1a1a;
        cursor: pointer;
        transition: all 0.2s;
        flex-shrink: 0;
      }

