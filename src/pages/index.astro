---
import linksData from '../data/links.json';
const { profile, pinnedLinks, links } = linksData;

// Helper function to handle base path for local images
const getImageUrl = (url: string) => {
  if (!url) return url;
  // If it's a local path (starts with /), prepend base URL
  if (url.startsWith('/') && !url.startsWith('//')) {
    const base = import.meta.env.BASE_URL.replace(/\/$/, ''); // Remove trailing slash if present
    return base + url;
  }
  return url;
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <title>{profile.name}</title>
  </head>
  <body>
    <div class="container">
      <header>
        {profile.avatar && (
          <img src={getImageUrl(profile.avatar)} alt={profile.name} class="avatar" />
        )}
        <h1>{profile.name}</h1>
        <p class="bio" set:html={profile.bio}></p>
        {profile.subtitle && <p class="subtitle" set:html={profile.subtitle}></p>}
      </header>

      <nav class="links-grid">
        {pinnedLinks.map((link) => (
          <a
            href={link.url}
            class={`link-item ${link.layout || 'row'} ${link.style || 'default'}`}
            target="_blank"
            rel="noopener noreferrer"
            data-email={link.url.startsWith('mailto:') ? link.url.replace('mailto:', '') : undefined}
          >
            {link.style === 'text' ? (
              <>
                <span class="content-title" set:html={link.title}></span>
                <p class="content-description" set:html={link.description}></p>
              </>
            ) : link.style === 'image-caption' ? (
              <>
                <img src={getImageUrl(link.thumbnail)} alt={link.title} class="content-image" />
                <div class="caption-area">
                  <span class="content-title" set:html={link.title}></span>
                  {link.caption && <span class="content-caption" set:html={link.caption}></span>}
                </div>
              </>
            ) : link.style === 'image-fill' ? (
              <>
                <img src={getImageUrl(link.thumbnail)} alt={link.title} class="fill-image" />
                <span class="overlay-title" set:html={link.title}></span>
              </>
            ) : (
              <>
                {link.thumbnail ? (
                  <img src={getImageUrl(link.thumbnail)} alt={link.title} class="thumbnail" />
                ) : link.circleColor ? (
                  <div class="circle-icon" style={`background-color: ${link.circleColor}`}></div>
                ) : link.materialIcon ? (
                  <span class="material-symbols-outlined">{link.materialIcon}</span>
                ) : link.icon ? (
                  <span class="icon">{link.icon}</span>
                ) : null}
                <span class="link-title" set:html={link.title}></span>
              </>
            )}
          </a>
        ))}
      </nav>

      <hr class="separator" />

      <nav class="links-grid">
        {links.map((link) => (
          <a
            href={link.url}
            class={`link-item ${link.layout || 'row'} ${link.style || 'default'}`}
            target="_blank"
            rel="noopener noreferrer"
            data-email={link.url.startsWith('mailto:') ? link.url.replace('mailto:', '') : undefined}
          >
            {link.style === 'text' ? (
              <>
                <span class="content-title" set:html={link.title}></span>
                <p class="content-description" set:html={link.description}></p>
              </>
            ) : link.style === 'image-caption' ? (
              <>
                <img src={getImageUrl(link.thumbnail)} alt={link.title} class="content-image" />
                <div class="caption-area">
                  <span class="content-title" set:html={link.title}></span>
                  {link.caption && <span class="content-caption" set:html={link.caption}></span>}
                </div>
              </>
            ) : link.style === 'image-fill' ? (
              <>
                <img src={getImageUrl(link.thumbnail)} alt={link.title} class="fill-image" />
                <span class="overlay-title" set:html={link.title}></span>
              </>
            ) : (
              <>
                {link.thumbnail ? (
                  <img src={getImageUrl(link.thumbnail)} alt={link.title} class="thumbnail" />
                ) : link.circleColor ? (
                  <div class="circle-icon" style={`background-color: ${link.circleColor}`}></div>
                ) : link.materialIcon ? (
                  <span class="material-symbols-outlined">{link.materialIcon}</span>
                ) : link.icon ? (
                  <span class="icon">{link.icon}</span>
                ) : null}
                <span class="link-title" set:html={link.title}></span>
              </>
            )}
          </a>
        ))}
      </nav>
    </div>

    <!-- Email Modal -->
    <div id="emailModal" class="email-popover">
      <div class="popover-row">
        <p class="modal-email" id="modalEmailAddress"></p>
        <div class="button-group">
          <button class="icon-btn" id="copyBtn" title="Copy">
            <span class="material-symbols-outlined">content_copy</span>
          </button>
          <button class="icon-btn" id="openMailBtn" title="Open Mail App">
            <span class="material-symbols-outlined">open_in_new</span>
          </button>
        </div>
      </div>
      <p class="modal-status" id="copyStatus">
        <span class="material-symbols-outlined status-icon">check_circle</span>
        <span class="status-text">Email copied to clipboard</span>
      </p>
    </div>

    <script>
      let currentEmail = '';
      let currentButton = null;

      function showEmailModal(email, buttonElement) {
        currentEmail = email;
        currentButton = buttonElement;
        const modal = document.getElementById('emailModal');

        document.getElementById('modalEmailAddress').textContent = email;
        modal.classList.add('active');

        // Position modal relative to button - align left edge of modal with left edge of button
        const rect = buttonElement.getBoundingClientRect();
        const left = rect.left;
        const top = rect.bottom + 8;

        modal.style.left = `${Math.max(16, left)}px`;
        modal.style.top = `${top}px`;

        // Auto-copy on open with animation
        copyToClipboard(email, true);
      }

      function closeEmailModal() {
        const modal = document.getElementById('emailModal');
        modal.classList.remove('active');
        document.getElementById('copyStatus').classList.remove('show');
      }

      function copyEmail() {
        copyToClipboard(currentEmail);
      }

      function copyToClipboard(text, isAuto = false) {
        navigator.clipboard.writeText(text).then(() => {
          const status = document.getElementById('copyStatus');
          status.classList.remove('show');

          // Trigger reflow to restart animation
          void status.offsetWidth;
          status.classList.add('show');

          if (!isAuto) {
            // When manually clicked, hide after delay
            setTimeout(() => {
              status.classList.remove('show');
            }, 2000);
          }
        }).catch(err => {
          console.error('Failed to copy:', err);
        });
      }

      function openMailApp() {
        const mailtoLink = document.createElement('a');
        mailtoLink.href = 'mailto:' + currentEmail;
        mailtoLink.click();
        closeEmailModal();
      }

      // Close modal when clicking outside
      document.addEventListener('click', (e) => {
        const modal = document.getElementById('emailModal');
        if (modal.classList.contains('active') &&
            !modal.contains(e.target) &&
            !e.target.closest('a[data-email]')) {
          closeEmailModal();
        }
      });

      // Close modal with Escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
          closeEmailModal();
        }
      });

      // Intercept all mailto links on page load
      document.addEventListener('DOMContentLoaded', () => {
        const mailtoLinks = document.querySelectorAll('a[data-email]');
        mailtoLinks.forEach(link => {
          link.addEventListener('click', (e) => {
            e.preventDefault();
            const email = link.getAttribute('data-email');
            if (email) {
              showEmailModal(email, link);
            }
          });
        });

        // Attach event listeners to modal buttons
        document.getElementById('copyBtn').addEventListener('click', (e) => {
          e.stopPropagation();
          copyEmail();
        });

        document.getElementById('openMailBtn').addEventListener('click', (e) => {
          e.stopPropagation();
          openMailApp();
        });
      });
    </script>

    <style>
